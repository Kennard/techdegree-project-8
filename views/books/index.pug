extends ../layout


block content
  form(action="/books/search", method="get")
      p
        input(type="text", name="term" class="search-fld")
        input(type="submit"  value="Search" class="search-btn")
 
  h1= title
  p
    a(href="/books/new", class="button") Create New Book
    
  table
    thead
      tr
        th= "Title"
        th= "Author"
        th= "Genre"
        th= "Year"
    tbody 
      each book in books
        tr
          td
            a(href="/books/" + book.id )= book.title
          td= book.author
          td= book.genre
          td= book.year

  p.pagination
      a(href="/books/?page=1") <
        - var i = 0
            while i < lastpage
              span
                a(href="/books/?page=" + ++i )= i + " "
      a(href="/books/?page=" + lastpage) >